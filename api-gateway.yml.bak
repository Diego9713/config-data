eureka:
  client:
    registerWithEureka: true
    fetchRegistry: true
    serviceUrl:
      defaultZone: ${EUREKA_URI:http://localhost:8761/eureka}
  instance:
    hostname: localhost
spring:
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
      routes:
        - id: customer-ms
          uri: lb://CUSTOMER-MS
          predicates:
            - Path=/api/v1/customers/**
        - id: product-ms
          uri: lb://PRODUCT-MS
          predicates:
            - Path=/api/v1/products/**
        - id: transaction-ms
          uri: lb://TRANSACTION-MS
          predicates:
            - Path=/api/v1/transactions/**
        - id: card-ms
          uri: lb://CARD-MS
          predicates:
            - Path=/api/v1/cards/**